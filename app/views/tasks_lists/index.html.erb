<h1><%= t('site.listing') %> tasks_lists</h1>
<p><%= link_to t("site.new") + ' Tasks list', new_tasks_list_path, :class => 'btn btn-primary' %></p>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks_lists.each do |tasks_list| %>
      <tr>
        <td><%= tasks_list.name %></td>
        <td><%= tasks_list.description %></td>
        <td><%= link_to t('site.show'), tasks_list, :class => 'btn btn-info' %></td>
        <td><%= link_to t('site.edit'), edit_tasks_list_path(tasks_list), :class => 'btn btn-success' %></td>
        <td><%= link_to t('site.destroy'), tasks_list, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>