<h1><%= t('site.listing') %> collaborators</h1>
<p><%= link_to t("site.new") + ' Collaborator', new_collaborator_path, :class => 'btn btn-primary' %></p>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @collaborators.each do |collaborator| %>
      <tr>
        <td><%= collaborator.name %></td>
        <td><%= collaborator.email %></td>
        <td><%= collaborator.role %></td>
        <td><%= link_to t('site.show'), collaborator, :class => 'btn btn-info' %></td>
        <td><%= link_to t('site.edit'), edit_collaborator_path(collaborator), :class => 'btn btn-success' %></td>
        <td><%= link_to t('site.destroy'), collaborator, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>