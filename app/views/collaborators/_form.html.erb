<%= form_for(@collaborator, :html_options => { :class => 'form' }) do |f| %>
  <% if @collaborator.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@collaborator.errors.count, "error") %> prohibited this collaborator from being saved:</h2>

      <ul>
      <% @collaborator.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.text_field :email, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :role_id %><br>
    <%= f.select :role_id, options_for_select( Role.all.map{ |s|[s.role, s.id] } ), {:include_blank => t('site.select')}, {:class => 'form-control'}  %>
  </div>
  <div class="form-group actions">
    <%= f.submit :class => 'btn btn-success' %>
  </div>
<% end %>
