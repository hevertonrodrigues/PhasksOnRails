<div class="page-header">
  <h1><%= t('site.listing_projects') %></h1>
</div>
<%= breadcrumb %>
<p><%= add_link(new_project_path) %></p>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('site.name') %></th>
      <th><%= t('site.description') %></th>
      <th><%= t('site.color') %></th>
      <th><%= t('site.actions') %></th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= project.color.name %></td>
        <td>
          <%= show_link project %> 
          <%= edit_link edit_project_path(project) %> 
          <%= destroy_link project %> 
        </td>
      </tr>
    <% end %>
  </tbody>
</table>