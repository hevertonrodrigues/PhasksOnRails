<h1><%= t('site.listing_projects') %></h1>
<p><%= link_to t('site.new') + ' ' + t('site.project'), new_project_path, :class => 'btn btn-primary' %></p>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('site.name') %></th>
      <th><%= t('site.description') %></th>
      <th><%= t('site.color') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= project.color.name %></td>
        <td><%= link_to t('site.show'), project, :class => 'btn btn-info' %></td>
        <td><%= link_to t('site.edit'), edit_project_path(project), :class => 'btn btn-success' %></td>
        <td><%= link_to t('site.destroy'), project, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>