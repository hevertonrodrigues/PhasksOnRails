<div class="page-header">
  <h1><%= t('site.listing_roles') %></h1>
</div>
<%= breadcrumb %>
<p><%= add_link(new_role_path) %></p>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Role</th>
      <th><%= t('site.actions') %></th>
    </tr>
  </thead>
  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.role %></td>
        <td>
          <%= show_link role %> 
          <%= edit_link edit_role_path(role) %> 
          <%= destroy_link role %> 
        </td>
      </tr>
    <% end %>
  </tbody>
</table>