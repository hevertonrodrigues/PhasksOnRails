<h1><%= t('site.listing') %> roles</h1>
<p><%= link_to t("site.new") + ' Role', new_role_path, :class => 'btn btn-primary' %></p>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.role %></td>
        <td><%= link_to t('site.show'), role, :class => 'btn btn-info' %></td>
        <td><%= link_to t('site.edit'), edit_role_path(role), :class => 'btn btn-success' %></td>
        <td><%= link_to t('site.destroy'), role, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>