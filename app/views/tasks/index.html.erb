<h1><%= t('site.listing') %> tasks</h1>
<p><%= link_to t("site.new") + ' Task', new_task_path, :class => 'btn btn-primary' %></p>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Task</th>
      <th>Description</th>
      <th>Status</th>
      <th>Collaborator</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.task %></td>
        <td><%= task.description %></td>
        <td><%= task.status %></td>
        <td><%= task.collaborator.name %></td>
        <td><%= link_to t('site.show'), task, :class => 'btn btn-info' %></td>
        <td><%= link_to t('site.edit'), edit_task_path(task), :class => 'btn btn-success' %></td>
        <td><%= link_to t('site.destroy'), task, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>