<h1>Listing tasks</h1>
<p><%= link_to 'New Task', new_task_path, :class => 'btn btn-primary' %></p>
<table class="table table-striped">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to 'Show', task, :class => 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_task_path(task), :class => 'btn btn-success' %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>