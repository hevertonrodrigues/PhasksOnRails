<div class="page-header">
  <h1><%= t('site.show_task') %></h1>
</div>
<%= breadcrumb %>

<p id="notice"><%= notice %></p>

<p>
  <strong>Task List:</strong>
  <%= @task.tasks_list.name unless @task.tasks_list.nil? %>
</p>

<p>
  <strong>Project:</strong>
  <%= @task.project.name unless @task.project.nil? %>
</p>

<p>
  <strong>Task:</strong>
  <%= @task.task %>
</p>

<p>
  <strong>Description:</strong>
  <%= @task.description %>
</p>

<p>
  <strong>Status:</strong>
  <%= @task.tasks_status.name unless @task.tasks_status.nil? %>
</p>

<p>
  <strong>Collaborator:</strong>
  <%= @task.collaborator.name unless @task.collaborator.nil? %>
</p>

<%= link_to t('site.edit'), edit_task_path(@task), { :class => 'btn btn-success' } %>
<%= back_link tasks_path %>
