<h1><%= t('site.listing') %> categories</h1>
<p><%= link_to t("site.new") + ' Category', new_category_path, :class => 'btn btn-primary' %></p>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Type</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.type %></td>
        <td><%= category.name %></td>
        <td><%= category.description %></td>
        <td><%= link_to t('site.show'), category, :class => 'btn btn-info' %></td>
        <td><%= link_to t('site.edit'), edit_category_path(category), :class => 'btn btn-success' %></td>
        <td><%= link_to t('site.destroy'), category, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>