<h1><%= t('site.listing') %> tasks_statuses</h1>
<p><%= link_to t("site.new") + ' Tasks status', new_tasks_status_path, :class => 'btn btn-primary' %></p>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks_statuses.each do |tasks_status| %>
      <tr>
        <td><%= tasks_status.name %></td>
        <td><%= link_to t('site.show'), tasks_status, :class => 'btn btn-info' %></td>
        <td><%= link_to t('site.edit'), edit_tasks_status_path(tasks_status), :class => 'btn btn-success' %></td>
        <td><%= link_to t('site.destroy'), tasks_status, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>