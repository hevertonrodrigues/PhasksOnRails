<h1><%= t('site.listing_colors') %></h1>
<p><%= link_to t("site.new") + ' Color', new_color_path, :class => 'btn btn-primary' %></p>
<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Hex</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @colors.each do |color| %>
      <tr>
        <td><div class="preview-color" style="background-color:<%= color.hex %>;"></div></td>
        <td><%= color.name %></td>
        <td><%= color.hex %></td>
        <td><%= link_to t('site.show'), color, :class => 'btn btn-info' %></td>
        <td><%= link_to t('site.edit'), edit_color_path(color), :class => 'btn btn-success' %></td>
        <td><%= link_to t('site.destroy'), color, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>